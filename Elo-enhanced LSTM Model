import pandas as pd  # Used for data manipulation and analysis
import numpy as np  # Useful for mathematical operations
import torch  # PyTorch, a library for machine learning models
import torch.nn as nn  # PyTorch's neural network library
from sklearn.preprocessing import StandardScaler  # For standardizing the dataset
from sklearn.model_selection import train_test_split  # To split the dataset into training and testing sets
from torch.utils.data import DataLoader, TensorDataset  # For creating and managing datasets in PyTorch
from apex.optimizers import FusedAdam  # Optimizer for training
from torch.optim.lr_scheduler import StepLR  # Scheduler for learning rate adjustment

# Read the dataset
data = pd.read_csv('E02.csv')  # Reading the CSV file containing the dataset

# Convert match dates to a suitable format
data['Date'] = pd.to_datetime(data['Date'])  # Converting the 'Date' column to datetime
data['Date'] = (data['Date'] - pd.Timestamp('1970-01-01')) // pd.Timed  # Adjusting date format
